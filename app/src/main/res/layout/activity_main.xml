<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/gray2"
    tools:context=".MainActivity">

    <!-- عنوان -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سرویس های دانشگاه صنعتی ارومیه"
        android:textSize="20sp"
        android:fontFamily="@font/sans_fa_name_bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- دکمه‌های انتخاب روز -->
    <LinearLayout
        android:id="@+id/dayButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnNormalDays"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="روزهای عادی"
            android:background="@drawable/backgrand_button"
            android:fontFamily="@font/sans_fa_name_bold"/>

        <Button
            android:id="@+id/btnJahatloo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="جهتلو"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgrand_button"
            android:fontFamily="@font/sans_fa_name_bold"/>

        <Button
            android:id="@+id/btnWednesdays"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="چهارشنبه ها"
            android:background="@drawable/backgrand_button"
            android:fontFamily="@font/sans_fa_name_bold"/>
    </LinearLayout>

    <!-- دکمه‌های مسیر -->
    <LinearLayout
        android:id="@+id/routeSelectionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dayButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnRoute1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="مسیر ۱"
            android:background="@drawable/backgrand_button"
            android:fontFamily="@font/sans_fa_name_bold"/>

        <Button
            android:id="@+id/btnRoute2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="مسیر ۲"
            android:background="@drawable/backgrand_button"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sans_fa_name_bold"/>
    </LinearLayout>

    <!-- لیست تایم‌ها -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="380dp"
        android:layout_height="482dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dayButtons"
        app:layout_constraintStart_toStartOf="@+id/dayButtons"
        app:layout_constraintTop_toBottomOf="@+id/dayButtons"
        app:layout_constraintVertical_bias="0.65">

        <LinearLayout
            android:id="@+id/linearLayoutTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/busImage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/bus_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
